<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp"
             x:Class="WeatherApp.MainPage"
             >

    <Grid VerticalOptions="StartAndExpand" 
          Padding="10" RowSpacing="60" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image x:Name="weatherImage"
               Source=""
               ScaleX="5"
               ScaleY="5"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
              HorizontalOptions="Center"
               >
                
        </Image>

        <Label Text="Current Temperature"
               Grid.Row="1" Grid.Column="0"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               ></Label>
        <Label Text="Mininum Temperature"
               Grid.Row="1" Grid.Column="2"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               >

        </Label>

        <Label x:Name="currentTempLabel"
               Text="null"
                  Grid.Row="2" Grid.Column="0"
                Grid.ColumnSpan="2"
               HorizontalOptions="Center"
            ></Label>
        <Label x:Name="minTempLabel"
               Text="null"
                  Grid.Row="2" Grid.Column="2"
               Grid.ColumnSpan="2"
            HorizontalOptions="Center"
            ></Label>

        <Label Text="Max Temperature"
               Grid.Row="3" Grid.Column="0"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center">
        </Label>

        <Label Text="Humidity"
              Grid.Row="3" Grid.Column="2"
              Grid.ColumnSpan="2"
               HorizontalOptions="Center"></Label>

        <Label x:Name="maxTempLabel"
               Text="null"
                  Grid.Row="4" Grid.Column="0"
                Grid.ColumnSpan="2"
               HorizontalOptions="Center"
            ></Label>
        <Label x:Name="currentHumLabel"
               Text="null"
                  Grid.Row="4" Grid.Column="2"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
            ></Label>

        <Label  
                Text="Enter city"
                Grid.Row="5" Grid.Column="0" 
            Grid.ColumnSpan="2"
               VerticalOptions="Center"
            HorizontalOptions="Center"
               ></Label>

        <Entry
                x:Name="enteredCity"
                x:DataType="x:String"
                VerticalOptions="Center"
                Grid.Row="5" Grid.Column="2" 
            Grid.ColumnSpan="2" >
        </Entry>

        <Button x:Name="currentWeatherButton"
                Text="Get Weather"
                Clicked="currentWeatheButton_Clicked"
                Grid.Row="6" Grid.ColumnSpan="4">

        </Button>

